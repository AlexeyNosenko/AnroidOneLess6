<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.master.anroidoneless6.TopActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_logo"
        android:src="@drawable/logo"
        android:contentDescription="@string/description_img_hairs"
        android:layout_column="0"
        android:layout_row="1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.master.anroidoneless6.TopActivity">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            tools:targetApi="ice_cream_sandwich">

            <ImageView
                android:id="@+id/ivNails"
                android:layout_width="@dimen/image_categoy_width"
                android:layout_height="@dimen/image_categoy_heigth"
                android:layout_column="0"
                android:layout_row="0"
                android:contentDescription="@string/description_img_hairs"
                android:src="@drawable/nail"/>

            <TextView
                android:id="@+id/tvNails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"

                android:text="@string/category_nails"
                android:textColor="@color/colorText"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical|left"
                android:layout_gravity="fill"
                android:textSize="@dimen/category_text_size"/>

            <ImageView
                android:id="@+id/ivHairs"
                android:layout_width="@dimen/image_categoy_width"
                android:layout_height="@dimen/image_categoy_heigth"
                android:src="@drawable/hair"
                android:contentDescription="@string/description_img_hairs"
                android:layout_column="0"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/tvHairs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:gravity="center_vertical|left"
                android:text="@string/category_hairs"
                android:textColor="@color/colorText"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="@dimen/category_text_size"/>

            <ImageView
                android:id="@+id/ivMap"
                android:layout_width="@dimen/image_categoy_width"
                android:layout_height="@dimen/image_categoy_heigth"
                android:layout_column="0"
                android:layout_row="2"
                android:src="@drawable/map"
                android:contentDescription="@string/category_map"/>

            <TextView
                android:id="@+id/tvMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:text="@string/category_map"
                android:textColor="@color/colorText"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/category_text_size"/>
        </GridLayout>
    </ScrollView>
</LinearLayout>
